<%@ Page Language="vb" AutoEventWireup="false" CodeBehind="WebForm7.aspx.vb" Inherits="WebApplication5.WebForm7" %>

<!DOCTYPE html>

<html xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <title></title>
    <style>
        #board,#slide {
            padding:30px;
            width :200px;
            text-align:center;
            background-color:yellow ;
            border:solid 3px blue;
        }

        #board {
        padding:60px;
        display:none;
        }

        #animation {
        background-color:yellow;
        width :100px;
        height :100px;
        position :absolute ;
        left: 0; 
        }

    </style>
     <script src="http://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script>
        $(document).ready(function () {
            $("#<%=show.ClientID%>").click(function (e) {
                e.preventDefault();
                $("#<%=Label1.ClientID%>").show();
            });
            $("#<%=hide.ClientID%>").click(function (e) {
                e.preventDefault();
                $("#<%=Label1.ClientID%>").hide();
            });
        });

        $(document).ready(function () {
            $("#<%=Button1.ClientID%>").click(function (e) {
                e.preventDefault();
                $("#div1").fadeIn("fast");
                $("#div2").fadeIn("slow");
                $("#div3").fadeIn("10000");
            });
        });

        $(document).ready(function () {
            $("#<%=Button2.ClientID%>").click(function (e) {
                 e.preventDefault();
                 $("#div1").fadeOut("fast");
                 $("#div2").fadeOut("slow");
                 $("#div3").fadeOut("30000");
             });
        });

        $(document).ready(function () {
            $("#<%=Button3.ClientID%>").click(function (e) {
                e.preventDefault();
                $("#div1").fadeToggle("fast");
                $("#div2").fadeToggle("slow");
                $("#div3").fadeToggle("30000");
            });
        });

        $(document).ready(function () {
            $("#<%=Button4.ClientID%>").click(function (e) {
                e.preventDefault();
                $("#div1").fadeTo("fast", 0.8);
                $("#div2").fadeTo("slow", 0.5);
                $("#div3").fadeTo("30000", 0.2);
            });
        });



        $(document).ready(function () {
            $("#slide").click(function () {
                if ($("#board").is(":hidden")) {
                    $("#board").slideDown("slow");
                } else if ($("#board").is(":visible")) {
                    $("#board").slideUp("slow");
                }
            });
        });


        $(document).ready(function () {
            $("#<%=Button5.ClientID%>").click(function (e) {
                e.preventDefault();
                $("#animation").animate({ left: '500px', width: '+=50px', height: '+=50px', opacity: '0.3' });

            });
        });
    </script>
</head>
<body>
    <form id="form1" runat="server">
        <asp:Label ID="Label1" runat="server" Text="我是一隻會飛的毛毛蟲"></asp:Label>
        <br />
        <asp:Button ID="show" runat="server" Text="顯示" />
        <asp:Button ID="hide" runat="server" Text="隱藏" />
        <hr />

        <h2>淡入 淡出</h2>
         <asp:Button ID="Button1" runat="server" Text="淡入" />
        <asp:Button ID="Button2" runat="server" Text="淡出" />
        <asp:Button ID="Button3" runat="server" Text="淡出/淡出" />
        <asp:Button ID="Button4" runat="server" Text="透明" /><br />
        <div id="div1" style="width:50px;height:50px;display:none;background-color:blue"></div><br />
        <div id="div2" style="width:50px;height:50px;display:none;background-color:blue"></div><br />
        <div id="div3" style="width:50px;height:50px;display:none;background-color:blue"></div>
        <hr />

        <div id="slide">按此滑出東東</div>
        <br />
        <div id="board">他的手可以穿過我的八八，其實用fadeToggle就好了，還寫什麼判別式 可撥</div>
        <hr />

       <h2>動畫</h2>
        <asp:Button ID="Button5" runat="server" Text="動畫" />
        <p>預設css postion屬性需先設為relative、fixed、absolute</p>
        <div id="animation"></div>
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />
        <br />

        <hr />
    </form>
</body>
</html>
